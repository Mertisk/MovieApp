@*@model Movie tek bir film verisi bekliyor demektir*@ 
@model Movie

    <div class="card mb-3">
        <div class="row">
            <div class="col-md-3">
                <img src="/img/@Model.ImageUrl" alt="@Model.Title"  style="max-width:222px; height:auto "/>
            </div>
            <div class="col-md-9">
                <div class="card-body">
                    <h5 class="card-title">
                        @Model.Title
                    </h5>
                    <div class="d-flex">

                        <a class="btn btn-info mr-2" asp-controller="Movies" asp-action="Details" asp-route-id="@Model.MovieId">Details</a>
                        <a class="btn btn-success mr-2" asp-controller="Movies" asp-action="Edit" asp-route-id="@Model.MovieId">Edit</a>


                        <form class="mr-2" asp-controller="Movies" asp-action="Delete" method="post">
                            <input type="hidden" name="Title" value="@Model.Title" />
                            <input type="hidden" name="MovieId" value="@Model.MovieId" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>

                    </div>
                      
                    
                </div>
            </div>
        </div>
    </div>



